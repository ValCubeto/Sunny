let text = "IReallyReallyLoveApples"
  .split_left_by_and_keep(/char/ char.is_upper())    # ['I', 'Really', ...]
  .join(' ')

fun String::split_left_by_and_keep(self, func: fun (Char) -> bool) -> String[] {
  var result = []
  var acc = String::new()
  for char in self.chars() {
    if func(char) {
      if !acc.is_empty() {
        result.push(acc)
        acc.clean()    # only sets len to zero
      }
    }
  }
  return result
}
